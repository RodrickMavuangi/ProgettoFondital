@inject DifettoClient httpClient 
@inject IStringLocalizer<App> localizer

<EditForm Model="NuovoDifetto" OnValidSubmit="SalvaDifetto">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>

    <div class="form-field">
        <label>@localizer["NomeItaliano"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovoDifetto.NomeItaliano"></InputText>
            <ValidationMessage For="() => NuovoDifetto.NomeItaliano" />
        </div>
    </div>
    <div class="form-field">
        <label>@localizer["NomeRusso"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovoDifetto.NomeRusso"></InputText>
            <ValidationMessage For="() => NuovoDifetto.NomeRusso" />
        </div>
    </div>
    <div class="form-field">
        @*<button class="btn btn-secondary mr-auto" @onclick="OnClose">@localizer["Cancella"]</button>*@
        <button type="submit" class="btn btn-primary ml-auto w-100 mt-5" disabled="@isSubmitting">@localizer["Salva"]</button>
    </div>
</EditForm>