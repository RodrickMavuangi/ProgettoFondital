@inject RapportoClient RapportoClient
@inject UtenteClient UtenteClient
@inject IStringLocalizer<App> Localizer
@inject FonditalAuthStateProvider AuthStateProvider

<EditForm Model="NuovoRapporto" OnValidSubmit="SalvaRapporto">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>
    <div class="form-field">
        <label>@Localizer["Telefono"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovoRapporto.Telefono" />
            <ValidationMessage For="() => NuovoRapporto.Telefono" />
        </div>
    </div>
    <div class="form-field">
        <button type="submit" class="btn btn-primary ml-auto w-100 mt-5" disabled="@isSubmitting">@Localizer["Salva"]</button>
    </div>
</EditForm>