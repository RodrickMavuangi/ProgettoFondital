@inject IStringLocalizer<App> localizer
@inject VoceCostoClient voceCostoClient
@inject CurrentStateProvider StateProvider

<div class="form-field">
    <TelerikDropDownList Data="ListaSelezione" Filterable="true" @bind-Value="VoceCostoName"/>
</div>

@if (VoceCostoToAdd?.Tipologia == TipologiaVoceCosto.Quantita)
{
    <div class="form-field">
        <input class="form-control form-control-lg w100" type="number" min="1" max="@Int32.MaxValue" @bind-value="@Quantita" />
    </div>
}

<div class="form-field">
    <TelerikButton Class="btn btn-primary ml-auto w-100 mt-5" Enabled="VoceCostoToAdd != null" OnClick="Done">@localizer["Salva"]</TelerikButton>
</div>