@inject IStringLocalizer<App> localizer
@inject VoceCostoClient voceCostoClient
@inject CurrentStateProvider StateProvider

<div class="form-field">
    @if (CurrentCulture == "it-IT")
    {
        <label>@localizer["NomeItaliano"]</label>
    }
    else
    {
        <label>@localizer["NomeRusso"]</label>
    }
        <div>
            <TelerikDropDownList Data="ListaSelezione" Filterable="true" @bind-Value="VoceCostoName" Class="form-control form-control-lg w100" />
        </div>
    </div>

    @if (VoceCostoToAdd?.Tipologia == TipologiaVoceCosto.Quantita)
    {
        <div class="form-field">
            <label>@localizer["Quantita"]</label>
            <div><input class="form-control form-control-lg w100" type="number" min="1" max="@Int32.MaxValue" @bind-value="@Quantita" /></div>
        </div>
    }

    <div class="form-field">
        <TelerikButton Class="btn btn-primary ml-auto w-100 mt-5" Enabled="IsButtonEnabled" OnClick="Done">@localizer["Salva"]</TelerikButton>
    </div>
