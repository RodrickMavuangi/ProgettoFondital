@inject VoceCostoClient httpClient
@inject IStringLocalizer<App> localizer

<EditForm Model="NuovaVoceCosto" OnValidSubmit="SalvaVoceCosto">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>
    <div class="form-field">
        <label class="text-capitalize">@localizer["NomeItaliano"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovaVoceCosto.NomeItaliano"></InputText>
            <ValidationMessage For="() => NuovaVoceCosto.NomeItaliano" />
        </div>
    </div>
    <div class="form-field mt-4">
        <label class="text-capitalize">@localizer["NomeRusso"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovaVoceCosto.NomeRusso"></InputText>
            <ValidationMessage For="() => NuovaVoceCosto.NomeRusso" />
        </div>
    </div>
    <div class="form-field mt-4">
        <label class="text-capitalize">@localizer["Tipologia"]</label>
        <div>
            <InputRadioGroup TValue="TipologiaVoceCosto" @bind-Value="NuovaVoceCosto.Tipologia">
                <InputRadio Value="TipologiaVoceCosto.Forfettario" /> @localizer["Forfettario"].Value.ToUpper()
                <br />
                <InputRadio Value="TipologiaVoceCosto.Quantita" /> @localizer["Quantita"].Value.ToUpper()
            </InputRadioGroup>
            <ValidationMessage For="@(() => NuovaVoceCosto.Tipologia)" />
        </div>
    </div>

    @*<button class="btn btn-secondary mr-auto" @onclick="OnClose">@localizer["Cancella"]</button>*@
    <button type="submit" class="btn btn-primary ml-auto w-100 mt-4" disabled="@isSubmitting">@localizer["Salva"]</button>

</EditForm>