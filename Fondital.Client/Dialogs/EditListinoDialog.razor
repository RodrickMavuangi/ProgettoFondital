@inject ListinoClient httpClient
@inject IStringLocalizer<App> localizer

<EditForm Model="ListinoToUpdate" OnValidSubmit="SalvaListino">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>
    <div class="form-field">
        <label>@localizer["Valore"]</label>
        <div>
            <InputNumber Class="form-control form-control-lg w100" @bind-Value="ListinoToUpdate.Valore"></InputNumber>
            <ValidationMessage For="() => ListinoToUpdate.Valore" />
        </div>
    </div>
    <div class="form-field">
        <button type="submit" class="btn btn-primary ml-auto w-100 mt-5" disabled="@isSubmitting">@localizer["Salva"]</button>
    </div>
</EditForm>