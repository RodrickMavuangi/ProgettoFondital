@inject ListinoClient httpClient
@inject IStringLocalizer<App> localizer

<EditForm Model="ListinoToUpdate" OnValidSubmit="SalvaListino">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>
    <div class="form-field">
        <label>@localizer["Valore"]</label>
        <div>
            <TelerikNumericTextBox  Arrows=false Class="form-control form-control-lg w100"  Format="₽ #" @bind-Value="ListinoToUpdate.Valore" Id="custom" Step="0"></TelerikNumericTextBox>
            <!--<InputNumber Class="form-control form-control-lg w100" @bind-Value="ListinoToUpdate.Valore"></InputNumber>-->  @*"{0:₽ 0.##}"*@  
            <ValidationMessage For="() => ListinoToUpdate.Valore" />
        </div>
     </div>
    <div class="form-field">
        <button type="submit" class="btn btn-primary ml-auto w-100 mt-5" disabled="@isSubmitting">@localizer["ModificaValore"]</button>
    </div>
</EditForm>