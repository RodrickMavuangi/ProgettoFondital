@inject IStringLocalizer<App> localizer
@inject CurrentStateProvider StateProvider

<div class="form-field">
    @if (CurrentCulture == "it-IT")
    {
        <label>@localizer["NomeItaliano"]</label>
        <label class="form-control form-control-lg w100">@RapportoVoceCosto.VoceCosto.NomeItaliano</label>
    }
    else
    {
        <label>@localizer["NomeRusso"]</label>
        <label class="form-control form-control-lg w100">@RapportoVoceCosto.VoceCosto.NomeRusso</label>
    }
</div>

@if (RapportoVoceCosto.VoceCosto?.Tipologia == TipologiaVoceCosto.Quantita)
{
    <div class="form-field">
        <label>@localizer["Quantita"]</label>
        <input class="form-control form-control-lg w100" type="number" min="1" max="@Int32.MaxValue" @bind-value="@QuantitaToEdit" />
    </div>
}
@*else
{
    <label>La tipologia della voce di costo è: forfettaria</label> //e il localizer??
}*@

<div class="form-field">
    <TelerikButton Class="btn btn-primary ml-auto w-100 mt-5" Enabled="IsButtonEnabled" OnClick="Done">@localizer["Salva"]</TelerikButton>
</div>