@inject UtenteClient httpClient
@inject IStringLocalizer<App> localizer

<EditForm Model="UtenteToUpdate" OnValidSubmit="SalvaUtente">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>
    <div class="form-field">
        <label class="text-capitalize">@localizer["Email"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="UtenteToUpdate.Email" />
            <ValidationMessage For="() => UtenteToUpdate.Email" />
        </div>
    </div>
    <div class="form-field mt-4">
        <label class="text-capitalize">@localizer["Nome"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="UtenteToUpdate.Nome" />
            <ValidationMessage For="() => UtenteToUpdate.Nome" />
        </div>
    </div>
    <div class="form-field mt-4">
        <label class="text-capitalize">@localizer["Cognome"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="UtenteToUpdate.Cognome" />
            <ValidationMessage For="() => UtenteToUpdate.Cognome" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary ml-auto w-100 mt-4" disabled="@isSubmitting">@localizer["Salva"]</button>

</EditForm>