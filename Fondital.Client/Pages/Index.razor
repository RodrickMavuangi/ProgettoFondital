@page "/"
@inject FonditalAuthStateProvider authStateProvider
@inject IStringLocalizer<App> localizer
@inject UtenteClient utClient
@attribute [Authorize]


<AuthorizeView>
    <Authorized>
        <div class="row-1 d-flex justify-content-between flex-wrap flex-md-nowrap  pt-0 mb-64">
            <!--TITOLO PAGINA-->
            <div class="col-md-5  text-left pb-4 border-bottom">
                <div class="col  text-left d-inline-block ">
                    <div class="page-header">
                        @if (UtenteCorrente != null)
                        {
                            <h3>@localizer["Benvenuto"] @UtenteCorrente?.Nome.</h3>
                        }
                        else
                        {
                            <p>Caricamento dell'utente in corso...</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
