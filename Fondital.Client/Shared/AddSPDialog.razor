@inject ServicePartnerClient httpClient
@inject IStringLocalizer<App> localizer

<EditForm Model="NuovoSP" OnValidSubmit="SalvaSP">
    <DataAnnotationsValidator />

    <div>@ErrorMessage</div>
    <div class="form-field">
        <label class="text-capitalize">@localizer["RagioneSociale"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovoSP.RagioneSociale" />
            <ValidationMessage For="() => NuovoSP.RagioneSociale" />
        </div>
    </div>
    <div class="form-field mt-4">
        <label class="text-capitalize">@localizer["CodiceFornitore"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovoSP.CodiceFornitore" />
            <ValidationMessage For="() => NuovoSP.CodiceFornitore" />
        </div>
    </div>
    <div class="form-field mt-4">
        <label class="text-capitalize">@localizer["CodiceCliente"]</label>
        <div>
            <InputText Class="form-control form-control-lg w100" @bind-Value="NuovoSP.CodiceCliente" />
            <ValidationMessage For="() => NuovoSP.CodiceCliente" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary ml-auto w-100 mt-4" disabled="@isSubmitting">@localizer["Salva"]</button>

</EditForm>