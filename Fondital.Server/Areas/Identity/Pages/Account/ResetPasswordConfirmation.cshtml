@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Confermazione della reset password";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="row-1 d-flex justify-content-between flex-wrap flex-md-nowrap  pt-0 mb-64">
    <!--TITOLO PAGINA-->
    <div class="col-md-5  text-left pb-4 border-bottom">
        <div class="col  text-left d-inline-block ">
            <div class="page-header">
                <h1 class="h1"><b>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <!--FINE TITLE PAGE-->

    <!--ROW BOTTONI-->
    <div class="col-md-7 pb-4 border-bottom"></div><!--FINE BUTTON TOP DX-->
</div>
<!--FINE ROW 1 . TITOLI + BUTTON DX-->

<main class="col-md-12 ms-sm-auto col-lg-12">
    <div class="col-md-4  text-left pb-4 float-lg-left mt-48 notifica"><span class="alert-success alert">La password è stata resettata. Please <a asp-page="./Login">click here to log in</a>.</span></div>
</main>