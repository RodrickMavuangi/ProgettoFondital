{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IsSwaggerEnabled": true,
  "Serilog": {
    // Log levels include: Verbose, Debug, Information, Warning, Error, Fatal
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
        "Args": {
          // The optional outputTemplate defines the format of logged messages and provides a way to log additional
          // fields (like ASP.NET Core's RequestId) which may not be included in default message templates.
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "DBLogger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "MSSqlServer",
                "Args": {
                  "connectionString": "Database",
                  "sinkOptionsSection": {
                    "tableName": "AppLogs",
                    "schemaName": "dbo",
                    "autoCreateSqlTable": true
                  },
                  "columnOptionsSection": {
                    "addStandardColumns": [ "LogEvent" ],
                    //"removeStandardColumns": [ "MessageTemplate", "Properties" ],
                    "additionalColumns": [
                      //{
                      //  "ColumnName": "User",
                      //  "DataType": "varchar",
                      //  "DataLength": 255
                      //},
                      {
                        "ColumnName": "Action",
                        "DataType": "varchar",
                        "DataLength": 255
                      },
                      {
                        "ColumnName": "Object",
                        "DataType": "varchar",
                        "DataLength": 255
                      },
                      {
                        "ColumnName": "ObjectId",
                        "DataType": "varchar",
                        "DataLength": 255
                      },
                      {
                        "ColumnName": "LoginFailureReason",
                        "DataType": "varchar",
                        "DataLength": 255
                      }
                    ],
                    "level": {
                      "ColumnName": "Level",
                      "DataType": "nvarchar",
                      "DataLength": 12
                    }
                  }
                }
              }
            ]
          }
        }
      }
    ]
  }
}