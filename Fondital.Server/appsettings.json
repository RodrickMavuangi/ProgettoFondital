{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IsSwaggerEnabled": true,
  "Serilog": {
    // Log levels include: Verbose, Debug, Information, Warning, Error, Fatal
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        // Color-coded structured logging to console
        "Name": "Console",
        "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
        "Args": {
          // The optional outputTemplate defines the format of logged messages and provides a way to log additional
          // fields (like ASP.NET Core's RequestId) which may not be included in default message templates.
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }//,
      //{
      //  // Logging to ElasticSearch: note that Name is case-sensitive
      //  "Name": "Elasticsearch",
      //  "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
      //  "Args": {
      //    "nodeUris": "http://myElasticsearchServer:9200",
      //    "indexFormat": "myIndex-{0:yyyy.MM}"
      //  }
      //}
    ]
  }
}
