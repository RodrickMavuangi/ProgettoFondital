{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IsSwaggerEnabled": true,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Debug", "Serilog.Sinks.MSSqlServer" ],
    // Log levels include: Verbose, Debug, Information, Warning, Error, Fatal
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          // The optional outputTemplate defines the format of logged messages and provides a way to log additional
          // fields (like ASP.NET Core's RequestId) which may not be included in default message templates.
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Database",
          "sinkOptions": {
            "tableName": "AppLogs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "User",
                "DataType": "varchar",
                "DataLength": 255
              },
              {
                "ColumnName": "Action",
                "DataType": "varchar",
                "DataLength": 255
              },
              {
                "ColumnName": "Object",
                "DataType": "varchar",
                "DataLength": 255
              },
              {
                "ColumnName": "ObjectId",
                "DataType": "varchar",
                "DataLength": 255
              },
              {
                "ColumnName": "LoginFailureReason",
                "DataType": "varchar",
                "DataLength": 255
              }
            ]
          }
        }
      }
    ]
  },
  "RestClientSettings": {
    "BaseAddress": "http://svrsapsvi01.fondital.priv:8000",
    "UriModelloCaldaia": "/zapi_rapportini/getProductById?ID="
    //"UriRicambio": " /sparePart/555/444/1"
  }
}